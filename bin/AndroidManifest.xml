<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.usp.ime.ombudsmanadm"
    android:versionCode="1"
    android:versionName="1.0" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
	<uses-feature 
        android:glEsVersion="0x00020000"
        android:required="true"/>
	    
	<uses-permission android:name="android.permission.INTERNET" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.IncidentActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data 
            	android:name="android.app.default_searchable"
            	android:value=".view.SearchResultActivity"/>
        </activity>
        
        <activity android:name=".view.SearchResultActivity"
            android:parentActivityName=".view.IncidentActivity">
            <intent-filter>
				<action android:name="android.intent.action.SEARCH"/>                
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        
        <activity
            android:name=".view.IncidentFormActivity"
            android:label="@string/form_name" >
        </activity>
        
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="API_KEY" />

<!--         <activity -->
<!--             android:name="br.com.usp.ime.ombudsmanadm.map.view.IncidentsLocatorMapActivity" -->
<!--             android:label="@string/title_activity_incidents_locator_map" > -->
<!--         </activity> -->
	</application>
	
    <permission android:name="br.com.usp.ime.ombudsmanadm.permission.MAPS_RECEIVE"
        		android:protectionLevel="signature" tools:ignore="ManifestOrder"/>
    <uses-permission android:name="br.com.usp.ime.ombudsmanadm.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    
</manifest>
